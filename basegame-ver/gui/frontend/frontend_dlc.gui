types dlc_types {
	type dlc_collection = flowcontainer {
		margin_left = 20
		spacing = 16

		text_single = {
			parentanchor = vcenter
			max_width = 150
			align = nobaseline
			using = Font_Size_Medium
			elide = right
			text = "DLC"
		}

		flowcontainer = {
			datamodel = "[GetDlcCollection]"
			spacing = 10

			item = {
				container = {
					parentanchor = vcenter

					widget = {
						visible = "[Dlc.IsMajor]"
						size = { 80 80 }

						dlc_button = {}
					}

					widget = {
						visible = "[Not( Dlc.IsMajor )]"
						size = { 65 65 }

						dlc_button = {}
					}
				}
			}
		}
	}

	type dlc_button = button {
		size = { 100% 100% }
		alpha = "[TransparentIfFalse( Dlc.IsEnabled )]"
		onclick = "[Dlc.ShowInStore]"
		tooltip = "DLC_BUTTON_TOOLTIP"
		using = tooltip_ne

		button = {
			size = { 100% 100% }
			alwaystransparent = yes
			texture = "gfx/interface/backgrounds/round_frame_dec.dds"

				button = {
					size = { 100% 100% }
					position = { 3 -3 }
					alwaystransparent = yes
					parentanchor = center
					texture = "[Dlc.GetIcon]"
			}
		}
	}
}
